        <script><![CDATA[(function executeRule(current, previous /*, gs */ ) {
    // Check if the user's active status is changing from true to false
    if (current.active.changesTo(false)) {
        // Retrieve the user's sys_id
        var userId = current.sys_id;

        // Fetch the user's roles
        var roles = new GlideRecord('sys_user_has_role');
        roles.addQuery('user', userId);
        roles.query();

        // Remove all roles associated with the user
        while (roles.next()) {
            roles.deleteRecord();
        }

        // Log an entry in the system log
        gs.info('All roles removed for inactive user: ' + userId);
    }
})(current, previous);]]></script>
